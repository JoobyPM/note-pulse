# Application Configuration
APP_PORT=8080
LOG_LEVEL=info
LOG_FORMAT=json

# MongoDB Configuration
MONGO_URI=mongodb://root:example@mongo:27017/?authSource=admin
MONGO_DB_NAME=notepulse

# Authentication Configuration
JWT_SECRET=at-least-32-characters-for-HS256
JWT_ALGORITHM=HS256
ACCESS_TOKEN_MINUTES=15

# Refresh Token Configuration
REFRESH_TOKEN_DAYS=30
REFRESH_TOKEN_ROTATE=true

# Security Configuration
BCRYPT_COST=8
SIGNIN_RATE_PER_MIN=5

# WebSocket Configuration
WS_MAX_SESSION_SEC=900
WS_OUTBOX_BUFFER=256
