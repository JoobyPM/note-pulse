{
	"fmt": {
		"useTabs": true,
		"lineWidth": 130,
		"indentWidth": 4,
		"semiColons": true,
		"singleQuote": true,
		"proseWrap": "preserve",
		"include": ["src/", "./**/*.md"],
		"exclude": ["src/testdata/", "src/fixtures/**/*.ts", "dist/", "pnpm-lock.yaml"]
	},
	"compilerOptions": {
		"lib": [
			"ES2022",
			"DOM"
		],
		"checkJs": true,
		"strict": false
	},
	"unstable": [
		"sloppy-imports"
	]
}
